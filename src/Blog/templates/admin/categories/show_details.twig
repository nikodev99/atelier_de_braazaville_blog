
<div class="col-lg-4">
    <div class="sparkline8-list shadow-reset">
        <div class="sparkline8-hd">
            <div class="main-sparkline8-hd">
                <h1>Détails de l'article</h1>
                <div class="sparkline8-outline-icon">
                    <span class="sparkline8-collapse-link"><i class="fa fa-chevron-up"></i></span>
                    <span><i class="fa fa-wrench"></i></span>
                    <span class="sparkline8-collapse-close"><i class="fa fa-times"></i></span>
                </div>
            </div>
        </div>
        <div class="sparkline8-graph">
            <div class="basic-login-form-ad">
                <form action="">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="basic-login-inner">
                                <div class="form-group-inner">
                                    <label for="show_title">Nom de la catégorie</label>
                                    <input type="text" class="form-control" id="show_title" value="{{ item.name }}" disabled>
                                </div>
                                <div class="form-group-inner">
                                    <label for="show_slug">Slug</label>
                                    <input type="text" class="form-control" id="show_slug" value="{{ item.slug }}" disabled>
                                </div>
                                <div class="form-group-inner">
                                    <label for="show_created_date">Date d'ajout</label>
                                    <input type="text" class="form-control" id="show_created_date" disabled value="{{ item.created_date.format('d M Y H:i') }}">
                                </div>
                                <div class="form-group-inner">
                                    <label for="show_updated_date">Date de la dernière modification</label>
                                    <input type="text" class="form-control" id="show_updated_date" disabled value="{{ item.apdated_date.format('d M Y H:i') }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>