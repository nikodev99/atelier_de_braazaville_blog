{% extends 'layout.twig' %}

{% block title "Boutique | "~ product.name ~" | Atelier de Brazzaville" %}

{% block body %}

    <div class="page-title wb">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                    <h2><i class="fa fa-user-md" style="background: #e63412!important"></i> {{ product.name }} </h2>
                </div><!-- end col -->
                <div class="col-lg-4 col-md-4 col-sm-12 hidden-xs-down hidden-sm-down">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('homepage.show') }}">Accueil</a></li>
                        <li class="breadcrumb-item active">Récapitulatif</li>
                    </ol>
                </div><!-- end col -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end page-title -->
    <section class="section wb">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-wrapper">
                        <div class="portfolio row">
                            <div class="pitem item-w1 item-h1">
                                <div class="blog-box">
                                    <div class="post-media">
                                        <img src="{{ product.main }}" alt="" class="img-fluid" style="width: 100%">
                                    </div><!-- end media -->
                                    <div class="blog-meta">
                                        <!-- ON METTRA DES PHOTOS -->
                                    </div><!-- end meta -->
                                </div><!-- end blog-box -->
                            </div><!-- end col -->
                        </div><!-- end portfolio -->
                    </div><!-- end page-wrapper -->
                    <hr class="invis">
                </div><!-- end col -->
                <div class="col-lg-6">
                    <h4>Récapitulatif</h4>
                    <div class="card-text">
                        <P>{{ card.brand }} - **** **** **** {{ card.last4 }}</P>
                        <h3>Information de commande</h3>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Nom du produit</th>
                                <th>Prix HT</th>
                                <th>TVA</th>
                                <th>Prix TTC</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>{{ product.name }}</td>
                                <td>{{ product.price }}€</td>
                                <td>{{ vatRate }}%</td>
                                <td>{{ price }}€</td>
                            </tr>
                            </tbody>
                        </table>
                        {{ dump(current_user()) }}
                        <form action="{{ path('shop.charge', {id:product.id}) }}" method="POST">
                            <input type="hidden" name="stripeToken" value="{{ token }}">
                            <button class="btn btn-primary">Continuer</button>
                        </form>
                    </div>
                </div>
            </div><!-- end row -->
        </div><!-- end container -->
    </section>

{% endblock %}